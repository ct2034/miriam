# simple.world - basic world file example
# Authors: Richard Vaughan
# $Id$

include "irobot.inc"
include "map.inc"

# time to pause (in GUI mode) or quit (in headless mode (-g)) the simulation
quit_time 3600 # 1 hour of simulated time

paused 0

# spatial resolution of the underlying occupancy grid. Default is 0.02m.
resolution 0.02

# set the multiple of real time that Stage should try to achieve. Default is 1.
# set to 0 to go as fast as possible.
speedup 1.000

# configure the GUI window
window
(
  size [ 960 1007 ] # in pixels
  scale 110.002 	# pixels per meter
  center [ 0.543  -0.027 ]
  rotate [ 53.000  -15.000 ]

  show_data 1              # 1=on 0=off
)

# load an environment bitmap
floorplan
(
  name "z"
  size [8.500 8.500 0.200]
  pose [0.000 0.000 0.000 0.000]
  bitmap "z.png"
)

# top left
roomba
(
  name "r0"
  pose [ -1 3.5 0 -90 ]
  localization "gps"
  localization_origin [ 0 0 0 0 ]

  trail_length 400

)

# top right
roomba
(
  name "r1"
  pose [ 1 3.5 0.000 -90 ]
  localization "gps"
  localization_origin [ 0 0 0 0 ]
)

# right top
roomba
(
  name "r2"
  pose [ 3.5 1 0 180 ]
  localization "gps"
  localization_origin [ 0 0 0 0 ]
)

# right bottom
roomba
(
  name "r3"
  pose [ 3.5 -1 0 180 ]
  localization "gps"
  localization_origin [ 0 0 0 0 ]
)

# bottom right
roomba
(
  name "r4"
  pose [ 3.5 -3.5 0 90 ]
  localization "gps"
  localization_origin [ 0 0 0 0 ]
)

# bottom left
roomba
(
  name "r5"
  pose [ -1 -3.5 0 90 ]
  localization "gps"
  localization_origin [ 0 0 0 0 ]
)

# left bottom
roomba
(
  name "r6"
  pose [ -3.5 -3.5 0 0 ]
  localization "gps"
  localization_origin [ 0 0 0 0 ]
)

# left top
roomba
(
  name "r7"
  pose [ -3.5 3.5 0 0 ]
  localization "gps"
  localization_origin [ 0 0 0 0 ]
)
